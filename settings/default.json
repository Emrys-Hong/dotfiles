{
    "rules": [
        {
            "description": "Post capslock if right_shift is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Post Tab if Command_L is pressed alone.",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "tab"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Post Escape if caps_lock is pressed alone, otherwise Escape",
            "manipulators": [
               {
                  "from": {
                     "key_code": "caps_lock",
                     "modifiers": {
                        "optional": [
                           "any"
                        ]
                     }
                  },
                  "to": [
                     {
                       "key_code": "left_control"
                     }
                  ],
                  "to_if_alone": [
                     {
                       "key_code": "escape"
                     }
                  ],
                  "type": "basic"
               }
            ]
        },
        {
          "description": "Change right option to command+control+option",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "right_option",
                "modifiers": {
                  "optional": [
                    "any"
                  ]
                }
              },
              "to": [
                {
                  "key_code": "left_option",
                  "modifiers": [
                      "left_command",
                      "left_control"
                  ]
                }
              ]
            }
          ]
        },
        {
          "description": "Change left_command + d to delete only if pressed at the same time.",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "d",
                "modifiers": {
                  "mandatory": [
                    "left_command"
                  ],
                  "optional": [
                    "any"
                  ]
                }
              },
              "to": [
                {
                  "key_code": "delete_or_backspace"
                }
              ]
            }
          ]
        },
        {
          "description": "Change left_command + [ to delete only if pressed at the same time.",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "open_bracket",
                "modifiers": {
                  "mandatory": [
                    "left_command"
                  ],
                  "optional": [
                    "any"
                  ]
                }
              },
              "to": [
                {
                  "key_code": "delete_or_backspace"
                }
              ]
            }
          ]
        },
        {
          "description": "Change left_command + ; to enter only if pressed at the same time.",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "semicolon",
                "modifiers": {
                  "mandatory": [
                    "left_command"
                  ],
                  "optional": [
                    "any"
                  ]
                }
              },
              "to": [
                {
                  "key_code": "return_or_enter"
                }
              ]
            }
          ]
        },
        {
          "description": "Change right_command to shift",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "right_command"
              },
              "to": [
                {
                  "key_code": "left_shift"
                }
              ]
            }
          ]
        },
        {
            "description": "Change left_command+hjkl to arrow keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
